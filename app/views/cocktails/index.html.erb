<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/1600x900/?cocktail);">
  <div class="container">
    <h1>Cocktail anyone ?</h1>
    <p>Change your life and learn and learn to bartender like a pro.</p>
    <%= link_to "Create a cocktail", new_cocktail_path , class: "btn btn-gradient" %>

  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-color: #ebd8b7">
        <%= link_to(cocktail.name,  cocktail_path(cocktail)) %>
      </div>
    <% end %>
  </div>
</div>